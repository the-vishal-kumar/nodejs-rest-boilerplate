{
  "name": "nodejs-rest-boilerplate",
  "version": "1.0.0",
  "description": "",
  "main": "build/index.js",
  "scripts": {
    "build": "npx tsc",
    "start": "npm run build && node -r newrelic .",
    "dev": "concurrently \"npx tsc --watch\" \"nodemon -r newrelic -q build/index.js\"",
    "test": "jest",
    "pretty": "cross-os pretty",
    "pretty:check": "cross-os pretty:check",
    "lint": "cross-os lint",
    "prepare": "husky install"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/the-vishal-kumar/nodejs-rest-boilerplate.git"
  },
  "author": "Vishal Kumar <vishal194kumar@gmail.com>",
  "license": "GPL-3.0-or-later",
  "bugs": {
    "url": "https://github.com/the-vishal-kumar/nodejs-rest-boilerplate/issues"
  },
  "homepage": "https://github.com/the-vishal-kumar/nodejs-rest-boilerplate#readme",
  "devDependencies": {
    "@commitlint/cli": "^17.6.5",
    "@commitlint/config-conventional": "^17.6.5",
    "@types/compression": "^1.7.2",
    "@types/cookie-parser": "^1.4.3",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/node": "^20.2.5",
    "@types/uuid": "^9.0.1",
    "@typescript-eslint/eslint-plugin": "^5.59.8",
    "@typescript-eslint/parser": "^5.59.8",
    "concurrently": "^8.1.0",
    "cross-os": "^1.5.0",
    "eslint": "^8.41.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^8.0.3",
    "nodemon": "^2.0.22",
    "prettier": "^2.8.8",
    "typescript": "^5.1.3"
  },
  "dependencies": {
    "body-parser": "^1.20.2",
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv": "16.1.3",
    "express": "^4.18.2",
    "helmet": "^7.0.0",
    "multer": "^1.4.5-lts.1",
    "newrelic": "^10.1.2",
    "uuid": "^9.0.0",
    "winston": "^3.9.0"
  },
  "engines": {
    "npm": "9",
    "node": "18"
  },
  "cross-os": {
    "pretty": {
      "darwin": "prettier --write 'src/**/*.ts'",
      "win32": "prettier --write src/**/*.ts"
    },
    "pretty:check": {
      "darwin": "prettier --check 'src/**/*.ts'",
      "win32": "prettier --check src/**/*.ts"
    },
    "lint": {
      "darwin": "eslint 'src/**/*.ts'",
      "win32": "eslint src/**/*.ts"
    }
  }
}
